<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-intstance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>
  
  	<!-- 编码过滤器 -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.diecolor.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>coding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 管理员登录过滤器 -->
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.diecolor.filter.LoginFilter</filter-class>
		
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	
	<!-- 学生登录过滤器 -->
	<filter>
		<filter-name>StudentLoginFilter</filter-name>
		<filter-class>com.diecolor.filter.StudentLoginFilter</filter-class>
		
	</filter>
	<filter-mapping>
		<filter-name>StudentLoginFilter</filter-name>
		<url-pattern>/student/*</url-pattern>
	</filter-mapping>
	<!-- 教师登录过滤器 -->
	<filter>
		<filter-name>TeacherLoginFilter</filter-name>
		<filter-class>com.diecolor.filter.TeacherLoginFilter</filter-class>
		
	</filter>
	<filter-mapping>
		<filter-name>TeacherLoginFilter</filter-name>
		<url-pattern>/teacher/*</url-pattern>
	</filter-mapping>

<!--NFDFlightDataTaskListener 监听器-->
<listener>
    <listener-class>com.diecolor.util.NFDFlightDataTaskListener</listener-class>
